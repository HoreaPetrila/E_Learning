<div class="container">
  <div class="row valign-wrapper">
    <div class="col s6 ">
      <h3> Your courses </h3>
    </div>
    <div class="col s6 right-align">
      <%= link_to 'Add new course', new_course_path, class: 'waves-effect btn indigo'  %>
    </div>
  </div>
  <div class="row">
    <% @course_enrollements.each do |enroll| %>
      <div class="col s4">
        <div class="card">
          <div class="card-image">
            <img src="http://lorempixel.com/640/480/abstract/<%= rand(1..10) %>">
            <span class="card-title"><%= enroll.course.title %></span>
          </div>
          <div class="card-content">
            <p>
              <%= truncate(enroll.course.description, :length => 100) %>
            </p>
            <div class="row valign-wrapper">
              <div class="col s12">
                <div class="chip indigo white-text">
                  <%= enroll.course.subjectstring %>
                </div>
                <div class="chip teal white-text">
                  <%= enroll.course.university.name %>
                </div>
              </div>
            </div>
          </div>
          <div class="card-action">
            <div class="row">
              <div class="col s6 center-align">
                <%= link_to 'Show', enroll.course %>
              </div>
              <div class="col s6 center-align">
                 <%= link_to 'Unsubscribe', enroll, method: :delete, data: { confirm: 'Are you sure?' } %>
              </div>
            </div>
          </div>
        </div>
      </div>




        <% end %>
  </div>
</div>
<br>