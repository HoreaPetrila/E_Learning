	<div class="container">
		<div class="card-panel">
			<div class="row valign-wrapper">
				<div class="col s8 ">
					<h2 class="left-align">
						<%= @course.title %>
					</h2>
					<blockquote>
						This is an example introduction to the course..
					</blockquote>

				</div>
				<div class="col s4 ">
					<div class="center-align">
					
					<% if current_user.student_role? %>
						<% unless studied_by?(@course, current_user) %>
							<%= button_to "Enroll Now", {controller: "course_enrollements", action: "create", :course_enrollement => {user_id: current_user.id, course_id: @course.id} } , { class: "waves-effect waves-light btn-large teal", :method=>:post } %>
						<% else %>
							<%= link_to 'Unsubscribe',  {controller: "course_enrollements", action: "destroy", :params => {user_id: current_user.id, course_id: @course.id} } , { class:"waves-effect waves-teal btn-large btn-flat", method: :delete, data: { confirm: 'Are you sure?' }} %>
						<% end %>
					<% end %>
					
					</div>
				</div>
			</div>
			<%= link_to 'Edit course', edit_course_path(@course), class: 'waves-effect waves-yellow btn-flat' %> 
		</div>
		<div class="row">

			<div class="col s4">
				<ul class="collection with-header ">
					<li class="collection-header indigo white-text">
						<h4> Informations </h4>
					</li>
					<li class="collection-item">
						<div>Length<span class="new badge blue" data-badge-caption=""> <%= @course.length %> weeks</span></div>
					</li>
					<li class="collection-item">
						<div>University<span class="new badge blue" data-badge-caption=""><%= @course.university.name %></span></div>
					</li>
					<li class="collection-item">
						<div>Subject<span class="new badge blue" data-badge-caption=""><%= @course.subjectstring %></span></div>
					</li>
					
					<li class="collection-item">
						<div>Level<span class="new badge blue" data-badge-caption=""> <%= Level.find(@course.level).name %> </span></div>
					</li>
				</ul>
				<div class="divider"></div>
				<h4 class="center-align"> Instructors </h4>
				<ul class="collection">
					
					<li class="collection-item avatar">
						<img src="http://materializecss.com/images/yuna.jpg" alt="" class="circle">
						<span class="title"> <%= @course.user.name %> </span>
						<p> <%= @course.user.email %>
						</p>
						<a href="#!" class="secondary-content"><i class="material-icons">grade</i></a>
					</li>
				
					
				</ul>

			</div>
			<div class="col s8">
				<div class="card-panel">
					<h4> About this course </h4>
					<div class="divider"></div>
					<div class="section">
						<p class="text-flow">
							<%= @course.description %>
						</p>
					</div>
				</div>
			</div>
			<div class="divider"></div>
			<div class="col s8">

				<ul class="collapsible" data-collapsible="accordion">
					<li>
						<div class="collapsible-header">
							<h5> Reviews </h5>
						</div>
						<div class="collapsible-body">
							<ul class="collection">
