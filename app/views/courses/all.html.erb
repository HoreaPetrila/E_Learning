<div class="container">
	<div class="row valign-wrapper">
		<div class="col s6">
			<h1> All Courses</h1>
		</div>
		<div class="col s6 right-align">
			<%= link_to 'Add new course', new_course_path, class: 'waves-effect btn indigo'  %>
		</div>
	</div>
	<div class="row">
		<div class="col s3">
			<div class="collection with-header">
				<h5 class="collection-header"> Subjects </h5>
				<% Course.distinct.pluck(:subjectstring).each do | subject |%>
					<a href="#!" class="collection-item"> <%= subject %> <span class="new badge blue" data-badge-caption=""> <%= Course.where(:subjectstring => subject).count %> </span></a>
				<% end %>
			</div>
			<div class="input-field">
				<h5> University </h5>
				<select id="uny">
							<option value="" disabled selected>Choose your option</option>
							<option value="1">Harvard</option>
							<option value="2">Ibn Tofail</option>
							<option value="3"> Cadi Ayad</option>
				</select>
			</div>
			<div class="collection with-header">
				<h5 class="collection-header"> Levels </h5>
				<% Level.all.each do|level|%>
				<a href="#!" class="collection-item"> <%= level.name %> <span class="new badge blue" data-badge-caption=""> <%= Course.where(:level => level.id).count %> </span></a>
				<% end %>
			</div>
		</div>
		<div class="col s9 ">
			<% @courses.each do | course | %>
				<%= render partial: "cards/card", locals: {course: course} %>
			<% end %>
		</div>
	</div>


</div>
<script type="text/javascript">
	$(document).ready(function () {
		$('#uny').material_select();
	});
</script>
<br>